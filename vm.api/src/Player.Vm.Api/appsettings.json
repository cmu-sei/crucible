{
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "ClientSettings": {
    "urls": {
      "playerApi": "http://localhost:4300/"
    }
  },
  "CorsPolicy": {
    "Origins": [
      "http://localhost:4303",
      "http://localhost:4305"
    ],
    "Methods": [],
    "Headers": [],
    "AllowAnyOrigin": false,
    "AllowAnyMethod": true,
    "AllowAnyHeader": true,
    "SupportsCredentials": true
  },
  "ConnectionStrings": {
    "PostgreSQL": "Server=localhost;Port=5010;Database=s3_vm_api;Username=postgres;Password=password;Keepalive=1;",
    "Sqlite": "Data Source=s3_vm_api.db",
    "SqlServer": "Server=(localdb)\\mssqllocaldb;Database=s3_vm_api_db;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Database": {
    "AutoMigrate": true,
    "DevModeRecreate": true,
    "Provider": "Sqlite"
    /*  Options:
        "InMemory", "Sqlite", "SqlServer", "PostgreSQL"   */
  },
  "Authorization": {
    "Authority": "http://localhost:5000",
    "AuthorizationUrl": "http://localhost:5000/connect/authorize",
    "AuthorizationScope": "s3 s3-vm",
    "ClientId": "s3.vm.swagger",
    "ClientName": "Scenario Player VM Swagger UI",
    "ClientSecret": "",
    "RequireHttpsMetadata": false
  },
  "IsoUpload": {
    "BasePath": "player/isos",
    "MaxFileSize": 6000000000
  },
  "Vsphere": {
    "Host": "",
    "Username": "",
    "Password": "",
    "DsName": "",
    "BaseFolder": "player",
    "Timeout": 30,
    "ConnectionRetryIntervalSeconds": 60,
    "ConnectionRefreshIntervalMinutes": 20,
    "LoadCacheAfterIterations": 5,
    "LogConsoleAccess": false,
    "CheckTaskProgressIntervalMilliseconds": 300
  },
  "RewriteHost": {
    "RewriteHost": false,
    "RewriteHostUrl": "localhost:4304",
    "RewriteHostQueryParam": "vm-host"
  }
}